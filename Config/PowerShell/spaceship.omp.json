{
  "$schema": "https://raw.githubusercontent.com/JanDeDobbeleer/oh-my-posh/main/themes/schema.json",
  "final_space": false,
  "osc99": false,
  "console_title": false,
  "blocks": [
    {
      "type": "prompt",
      "alignment": "left",
      "horizontal_offset": 0,
      "vertical_offset": 0,
      "segments": [
        {
          "type": "root",
          "style": "plain",
          "foreground": "#ff94df",
          "properties": {
            "root_icon": "#"
          }
        },
        {
          "type": "path",
          "style": "plain",
          "foreground": "cyan",
          "properties": {
            "style": "full"
          }
        },
        {
          "type": "git",
          "style": "plain",
          "foreground": "#ff94df",
          "properties": {
            "branch_icon": " <#ff94df><b>î‚  </b></>",
            "prefix": "<#ffffff>on</>"
          }
        },
        {
          "type": "text",
          "style": "plain",
          "foreground": "lightGreen",
          "properties": {
            "prefix": "",
            "text": "\u276F"
          }
        }
      ]
    }
  ]
}
