{
  "$schema": "https://raw.githubusercontent.com/JanDeDobbeleer/oh-my-posh/main/themes/schema.json",
"blocks": [
    {
      "type": "prompt",
      "alignment": "left",
      "newline": false,
      "segments": [
        {
          "type": "root",
          "style": "plain",
          "foreground": "blue",
          "properties": {
            "prefix": "",
            "root_icon": "❯❯"
          }
        },
        {
          "type": "path",
          "style": "plain",
          "foreground": "cyan",
          "properties": {
            "prefix": "",
            "style": "full"
          }
        },
        {
          "type": "git",
          "style": "plain",
          "foreground": "#ff94df",
          "properties": {
            "branch_icon": " ",
            "prefix": ""
          }
        },
        {
          "type": "text",
          "style": "plain",
          "foreground": "green",
          "properties": {
            "prefix": "",
            "text": "\u276F"
          }
        }
      ]
    }
  ]
}
